ENV APPNAME="DkVerwaltungQt"

ENV PUID=1000
ENV PGID=1000
ENV TZ=Europe/London
# abc #optional
# ENV GUAC_USER=
# 900150983cd24fb0d6963f7d28e17f72 #optional
# ENV GUAC_PASS=
# optional
ENV UMASK_SET=022
# optional
